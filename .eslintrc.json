{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "prefer-const": "warn",
    "no-var": "error",
    "no-console": "off"
  },
  "ignorePatterns": [
    "lib/**/*",
    "node_modules/**/*",
    "*.js"
  ]
}
